<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>

                 
                <prop key="login.htm">LoginController</prop>
                <prop key="index.htm">indexController</prop>
                <prop key="Empresa.htm">EmpresaController</prop> 
                                         
                <prop key="PerfilCandidato.htm">CandidatoController</prop>
                <prop key="RegistroCandidato.htm">CandidatoController</prop>
                <prop key="CandidatoAdd.htm">CandidatoController</prop>
                <prop key="CandidatoIndex.htm">CandidatoController</prop>
                
                <prop key="LogrosIndex.htm">LogrosController</prop>
                <prop key="LogrosAdd.htm">LogrosController</prop>
                <prop key="LogrosEdit.htm">LogrosController</prop>
                <prop key="LogrosDelete.htm">LogrosController</prop>
                
                <prop key="ArticuloIndex.htm">ArticuloController</prop>
                <prop key="ArticuloAdd.htm">ArticuloController</prop>
                <prop key="ArticuloEdit.htm">ArticuloController</prop>
                <prop key="ArticuloDelete.htm">ArticuloController</prop>
                
                <prop key="TelefonoIndex.htm">TelefonoController</prop>
                <prop key="TelefonoAdd.htm">TelefonoController</prop>
                <prop key="TelefonoEdit.htm">TelefonoController</prop>
                <prop key="TelefonoDelete.htm">TelefonoController</prop>
                
                <prop key="OfertaIndex.htm">OfertaController</prop>
                <prop key="OfertaAdd.htm">OfertaController</prop>
                <prop key="OfertaEdit.htm">OfertaController</prop>
                <prop key="OfertaDelete.htm">OfertaController</prop>
                
                <prop key="ExperienciaIndex.htm">ExperienciaController</prop>
                <prop key="ExperienciaAdd.htm">ExperienciaController</prop>
                <prop key="ExperienciaEdit.htm">ExperienciaController</prop>
                <prop key="ExperienciaDelete.htm">ExperienciaController</prop>
                
                <prop key="Error.htm">PagesController</prop>

                <prop key="validarLogin.htm">LoginController</prop> 
                                
              <!--URL de EMPRESA-->
                <prop key="EMPRESA/actualizar_Empresa.htm">ActualizarEmpresaController</prop>
                <prop key="EMPRESA/homeEmpresa.htm">HomeEmpresaController</prop>
                <prop key="signup.htm">SignupEmpresaController</prop>
                
                <!--Fin URL EMPRESA-->                         
                

            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp"         
    />

    <!--
    The index controller.
    -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    
    <bean name="EmpresaController"
          class="Controlador.EmpresaController"
    />
    <bean name="LoginController"
          class="Controlador.LoginController"
    />
    
    <bean name="CandidatoController" class="Controlador.CandidatoController"/>
    <bean name="LogrosController" class="Controlador.LogrosController"/>
    <bean name="PagesController" class="Controlador.PagesController"/>
    <bean name="ArticuloController" class="Controlador.ArticuloController"/>
    <bean name="TelefonoController" class="Controlador.TelefonoController"/>
    <bean name="OfertaController" class="Controlador.OfertaController"/>
    <bean name="ExperienciaController" class="Controlador.ExperienciaController"/>
    
    <!--Controller para EMPRESA-->
    <bean name="SignupEmpresaController"
          class="Controlador.Empresa.SignupEmpresaController"
    />
     <bean name="HomeEmpresaController"
          class="Controlador.Empresa.HomeEmpresaController"
    />
    <bean name="ActualizarEmpresaController"
          class="Controlador.Empresa.ActualizarEmpresaController"
    />
    <!--/Controller para EMPRESA-->
   
    

</beans>
